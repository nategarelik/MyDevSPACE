{
  "name": "ultimate-ai-ide",
  "version": "0.1.0",
  "private": true,
  "description": "The Ultimate AI-Powered Development Environment",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky install",
    
    "ai:init": "./bin/ultimate-ai init",
    "ai:build": "./bin/ultimate-ai sc:build --optimize",
    "ai:review": "./bin/ultimate-ai sc:review --agents all",
    "ai:plan": "./bin/ultimate-ai bmad:plan",
    "ai:dev": "./bin/ultimate-ai dev --mode hybrid",
    "ai:demo": "./bin/ultimate-ai demo --interactive",
    "ai:doctor": "./bin/ultimate-ai doctor",
    "ai:test": "./bin/ultimate-ai test",
    
    "demo": "node examples/quick-start/basic-setup.js",
    "demo:agents": "node examples/superclaude/agent-showcase.js",
    "demo:bmad": "node examples/bmad/two-phase-workflow.js",
    "demo:all": "npm run demo && npm run demo:agents && npm run demo:bmad"
  },
  "devDependencies": {
    "@turbo/gen": "^2.3.0",
    "turbo": "^2.3.0",
    "prettier": "^3.4.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "@types/node": "^22.10.5",
    "typescript": "^5.7.3"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
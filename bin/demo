  try {
    // Import the Ultimate AI Integration
    const { UltimateAI, demonstrateCapabilities } = require('./packages/ultimate-ai-integration/dist');
    
    console.log('\nğŸ“¦ Initializing Ultimate AI Integration...');
    const ai = UltimateAI.getInstance();
    await ai.initialize();
    
    // Show system status
    console.log('\nğŸ“Š System Status:');
    const status = ai.getSystemStatus();
    console.log(`â€¢ SuperClaude: ${status.superClaude?.status || 'Active'}`);
    console.log(`â€¢ BMAD Orchestrator: ${status.bmad?.status || 'Active'}`);
    console.log(`â€¢ Integration Health: ${status.integration?.health || 'Excellent'}`);
    
